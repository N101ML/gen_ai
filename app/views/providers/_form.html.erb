<tr class="border-t border-neutral">
  <%= form_with model: provider, id: dom_id(provider, "form"), class: "flex flex-cols" do |f| %>
    <td>
      <%= f.text_field :name, placeholder: "Provider Name", class: "text-white bg-custom-bg-main" %>
    </td>
    <td class="flex justify-center space-x-2">
      <%= f.submit provider.new_record? ? "Add" : "Update", class: "btn btn-outline text-white bg-custom-bg-main" %>

      <% unless provider.new_record? %>
        <%= link_to "Back", providers_path, class: "btn btn-outline text-white bg-custom-bg-main" %>
      <% end %>
    </td>
  <% end %>
</tr>