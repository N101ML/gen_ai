<div class="w-full">
  <% content_for :title, "Providers" %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold text-white">Providers</h1>
  </div>

  <div class="grid grid-cols-2 gap-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @providers.each do |provider| %>
      <%= render provider, class: "object-cover w-full h-64 rounded" %>
    <% end %>
  </div>

  <div class="flex items-center justify-start m-2">
    <%= link_to "Add providers", new_provider_path, class: "rounded-lg px-4 bg-blue-600 text-white block font-medium" %>
  </div>
</div>