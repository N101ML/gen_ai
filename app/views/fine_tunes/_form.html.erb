<%= form_with model: fine_tune, id: dom_id(fine_tune, "form"), class: "w-full flex flex-cols" do |f| %>
  <%= f.text_field :name, placeholder: "Fine Tune Name", class: "rounded-md border-gray-200 m-2" %>
  <%= f.collection_select :base_model_id, BaseModel.all, :id, :name, { prompt: "Select a Base Model" }, class: "rounded-md border-gray-200 w-full m-2" %>
  <%= f.submit fine_tune.new_record? ? "Create" : "Update", class: "px-4 py-2 bg-blue-500 text-white rounded-md m-2" %>
<% end %>