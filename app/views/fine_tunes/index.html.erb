<div class="w-full">
  <% content_for :title, "Fine Tunes" %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold text-white">Fine Tunes</h1>
  </div>

  <div class="grid grid-cols-2 gap-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @fine_tunes.each do |fine_tune| %>
      <%= render fine_tune, locals: { fine_tune: fine_tune }, class: "object-cover w-full h-64 rounded" %>
    <% end %>
  </div>
</div>